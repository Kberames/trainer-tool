                {{data.user.city2}}
            </div>
            <div>
                {{data.user.state2}}
            </div>
            <div>
                {{data.user.zipcode2}}
            </div>
            <div>
                {{data.user.phone2}}
            </div>
            <strong>Certifications</strong>
            <div>
                {{data.user.certification}}
            </div>
        </strong>
            {{/if}}
            <a href="/user/{{ data.user._id }}/edit">Edit Profile</a><br>
        </div>
    </div>
</div>



<div class="about1">
    <div class="panel panel-default">
        <div class="panel-body">
            {{#if user.client}}
            <div>
            <strong>Your Trainer:  {{data.user.trainer.firstname}}</strong><br>
            <img class="dashpic" src="{{data.user.trainer.imageUrl}}" />
            </div><br>
            <div>
                <a class="btn btn-primary" href="/trainer/#/message">Contact Trainer</a><br>
                <a href="/trainer/#/trainer-map">Change Your Trainer</a><br>

            </div>
            {{/if}}

            {{#if user.train}}
            <div>
                <strong>To go to your workouts</strong>
                <a class="btn btn-primary" href="/trainer/#/workout">Workouts</a>
            </div>
            <div>
                <strong>To contact your clients click here</strong>
                <a class="btn btn-primary" href="/trainer/#/message">Message</a>
            </div>
            {{/if}}
        </div>
    </div>
