<h2>Dashboard</h2>
<body class="users">

<br>
<div class="about">
    <div class="panel panel-default">
        <div class="panel-body">
            <img class="dashpic" src="{{data.user.imageUrl}}" /><br>
            <a href="/user/{{data.user._id}}/pic">Change Profile Picture</a><br>
            <a class="btn btn-primary" href="/trainer/#/message">Inbox</a><br>

            <strong>
            <div>
                <strong>Name: </strong>{{data.user.firstname}} {{data.user.lastname}}
            </div>
            <div>
                <strong>Email: </strong>{{data.user.email}}
            </div>
            <div>
                <strong>Gender: </strong>{{data.user.gender}}
            </div>
            <div>
                <strong>Address: </strong><br>{{data.user.address}}
            </div>
            <div>
                {{data.user.city}}
            </div>
            <div>
                {{data.user.state}},
